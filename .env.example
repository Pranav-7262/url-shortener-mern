# Backend .env example
# Copy to .env in backend (root) and fill values before deploying

MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/dbname
JWT_SECRET=your-very-secure-random-secret
PORT=3000
NODE_ENV=production
# Frontend origin (set to your Render frontend URL)
CLIENT_ORIGIN=https://your-frontend.onrender.com
# Optional: comma separated additional allowed origins
# ALLOWED_ORIGINS=https://your-frontend.onrender.com,https://admin.yoursite.com
COOKIE_NAME=token
JWT_EXPIRES_IN=30d
